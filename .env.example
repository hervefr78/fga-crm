# =============================================================================
# FGA CRM - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_ENV=development
APP_SECRET_KEY=change-this-to-a-random-string-in-production
APP_DEBUG=true
APP_NAME=FGA CRM
APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=fga_crm
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=fga_crm
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}
DATABASE_POOL_SIZE=5
DATABASE_POOL_MAX_OVERFLOW=10

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=change-this-to-a-random-string-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# AI - Claude (Anthropic)
# -----------------------------------------------------------------------------
CLAUDE_API_KEY=sk-ant-your-key-here
CLAUDE_MODEL=claude-sonnet-4-20250514

# -----------------------------------------------------------------------------
# AI - ChatGPT (OpenAI)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o

# -----------------------------------------------------------------------------
# Email - OVH
# -----------------------------------------------------------------------------
OVH_SMTP_HOST=ssl0.ovh.net
OVH_SMTP_PORT=465
OVH_IMAP_HOST=ssl0.ovh.net
OVH_IMAP_PORT=993
OVH_EMAIL_USER=your-email@yourdomain.com
OVH_EMAIL_PASSWORD=your-email-password

# -----------------------------------------------------------------------------
# LinkedIn Integration (Developer Account)
# https://www.linkedin.com/developers/
# -----------------------------------------------------------------------------
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:8300/api/v1/integrations/linkedin/callback
LINKEDIN_CHROME_EXTENSION_SECRET=change-this-secret

# -----------------------------------------------------------------------------
# Google Calendar (optional)
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8300/api/v1/calendar/callback

# -----------------------------------------------------------------------------
# Startup Radar Integration
# -----------------------------------------------------------------------------
STARTUP_RADAR_API_URL=http://startup-radar-backend:8000/api/v1
STARTUP_RADAR_API_KEY=change-this-shared-api-key

# -----------------------------------------------------------------------------
# File Storage (MinIO)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=fga-crm-files

# -----------------------------------------------------------------------------
# WebAuthn (Touch ID / Passkeys)
# -----------------------------------------------------------------------------
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=FGA CRM
WEBAUTHN_ORIGIN=http://localhost:3300

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8300/api/v1
VITE_APP_NAME=FGA CRM
